{{#each blogs}}
<div class="padding">
    <div class="card">
        <div class="card-header" id="card-header">
            {{title}}
        </div>
        <div class="card-body">
            <h5 class="card-title" id="card-description">{{description}}</h5>
            <p class="card-text">Posted by: {{user.username}}</p>
            <a href="/comment/" class="btn btn-primary">Comment</a>
        </div>
    </div>
</div>
{{/each}}
<div class="d-flex justify-content-center">
    <a class="btn btn-primary" href="/newpost">Create New Blog</a>
</div>